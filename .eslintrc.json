{
  "extends":[
    "prettier",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true
},
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins":[
    "react"
  ],
  "rules":{
    "arrow-parens":"error",
    "implicit-arrow-linebreak":"off",
    "indent":"off",
    "max-len":[
      "error",
      200
    ],
    "no-confusing-arrow":"off",
    "object-curly-newline":[
      "error",
      {
        "ObjectExpression":{
          "multiline":true,
          "consistent":true
        },
        "ObjectPattern":{
          "multiline":true,
          "consistent":true
        },
        "ImportDeclaration":{
          "multiline":true,
          "consistent":true
        },
        "ExportDeclaration":{
          "multiline":true,
          "consistent":true
        }
      }
    ],
    "react/jsx-no-bind":[
      "error",
      {
        "allowArrowFunctions":true
      }
    ],
    "react/prop-types":"off",
    "react/jsx-props-no-spreading":"off",
    "semi":"error"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "alias": {
          "components": "./src/components",
          "common": "./src/common"
        }
      }
    },
    "react": {
      "version": "detect"
    }
  }
}